{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Docker: Attach to Manager",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "subProcess": true,
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/services/idun_agent_manager/src",
          "remoteRoot": "/app/src"
        },
        {
          "localRoot": "${workspaceFolder}/libs/idun_agent_schema",
          "remoteRoot": "/schema"
        }
      ],
      "justMyCode": false
    },
    {
      "name": "Idun Manager (FastAPI)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "preLaunchTask": "uv sync (manager)",
      "args": [
        "app.main:app",
        "--host",
        "0.0.0.0",
        "--port",
        "8500",
        "--reload"
      ],
      "cwd": "${workspaceFolder}/services/idun_agent_manager/src",
      "envFile": "${workspaceFolder}/services/idun_agent_manager/.env",
      "justMyCode": false,
      "console": "integratedTerminal"
    },
    {
      "name": "Idun Engine (Exemple 1)",
      "type": "debugpy",
      "request": "launch",
      "console": "integratedTerminal",
      "module": "idun_platform_cli.main",
      // "args": [
      //   "main:app",
      //   "--host",
      //   "0.0.0.0",
      //   "--port",
      //   "8100",
      //   "--reload"
      // ],
      "args": [
        "agent", "serve",
        "--source",
        "file",
        "--path",
        "${workspaceFolder}/libs/idun_agent_engine/examples/01_basic_config_file/config.yaml",
      ],
      "cwd": "${workspaceFolder}/libs/idun_agent_engine",
      "justMyCode": false,
      "envFile": "${workspaceFolder}/libs/idun_agent_engine/.env"
    },
    {
      "name": "Idun Engine (Manager Source)",
      "type": "debugpy",
      "request": "launch",
      "console": "integratedTerminal",
      "module": "idun_platform_cli.main",
      "args": [
        "agent", "serve",
        "--source",
        "manager"
      ],
      "cwd": "${workspaceFolder}/libs/idun_agent_engine",
      "justMyCode": false,
      "envFile": "${workspaceFolder}/libs/idun_agent_engine/.env",
      "env": {
        "IDUN_MANAGER_HOST": "http://0.0.0.0:8000",
        "IDUN_AGENT_API_KEY": "${input:agentApiKey}"
      }
    },
    {
      "name": "Idun Engine (Exemple ADK)",
      "type": "debugpy",
      "request": "launch",
      "console": "integratedTerminal",
      "module": "idun_platform_cli.main",
      "args": [
        "agent", "serve",
        "--source",
        "file",
        "--path",
        "${workspaceFolder}/libs/idun_agent_engine/examples/07_adk/config.yaml",
      ],
      "cwd": "${workspaceFolder}/libs/idun_agent_engine",
      "justMyCode": false,
      "envFile": "${workspaceFolder}/libs/idun_agent_engine/.env",
      "env": {
        "GOOGLE_GENAI_USE_VERTEXAI": "TRUE",
        "GOOGLE_CLOUD_PROJECT": "chat-appsheet-prd",
        "GOOGLE_CLOUD_LOCATION": "us-central1"
      }
    },
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal",
      "justMyCode": false
    }
  ],
  "compounds": [
    {
      "name": "Run Manager + Engine",
      "configurations": [
        "Idun Manager (FastAPI)",
        "Idun Engine (FastAPI)"
      ]
    }
    // {
    //   "name": "Run Manager + Engine + Streamlit",
    //   "configurations": [
    //     "Idun Manager (FastAPI)",
    //     "Idun Engine (FastAPI)",
    //     "IdunEngine Streamlit (placeholder)"
    //   ]
    // }
  ],
  "inputs": [
    {
      "id": "agentApiKey",
      "type": "promptString",
      "description": "Enter the Agent API Key",
      "default": "0fd84deb11b4687e25b58520622d006ce6cc6e863275fd48b9f998e086172ac5"
    }
  ]
}
