{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Idun Manager (FastAPI)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "app.main:app",
        "--host",
        "0.0.0.0",
        "--port",
        "8500",
        "--reload"
      ],
      "cwd": "${workspaceFolder}/services/idun_agent_manager/src",
      "envFile": "${workspaceFolder}/services/idun_agent_manager/.env",
      "justMyCode": false,
      "console": "integratedTerminal"
    },
    {
      "name": "Idun Engine (FastAPI)",
      "type": "debugpy",
      "request": "launch",
      "console": "integratedTerminal",
      "module": "uvicorn",
      "args": [
        "main:app",
        "--host",
        "0.0.0.0",
        "--port",
        "8100",
        "--reload"
      ],
      "cwd": "${workspaceFolder}/libs/idun_agent_engine/examples/01_basic_config_file",
      "justMyCode": false,
      "envFile": "${workspaceFolder}/libs/idun_agent_engine/examples/01_basic_config_file/.env"
    },
  ],
  "compounds": [
    {
      "name": "Run Manager + Engine",
      "configurations": [
        "Idun Manager (FastAPI)",
        "Idun Engine (FastAPI)"
      ]
    }
    // {
    //   "name": "Run Manager + Engine + Streamlit",
    //   "configurations": [
    //     "Idun Manager (FastAPI)",
    //     "Idun Engine (FastAPI)",
    //     "IdunEngine Streamlit (placeholder)"
    //   ]
    // }
  ]
}
